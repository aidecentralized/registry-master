# MongoDB Configuration
MONGO_USERNAME=admin
MONGO_PASSWORD=password123
MONGO_DATABASE=registry_master
REPLICA_SET_NAME=rs0

# MongoDB URI - always points to local MongoDB container
# Each registry service connects to its own local MongoDB
# Replica set handles data synchronization between VMs
MONGODB_URI=mongodb://admin:password123@mongodb:27017/registry_master?replicaSet=rs0&authSource=admin
MONGODB_DATABASE=registry_master

# API Configuration
PORT=8000
ADMIN_TOKEN=your-secure-admin-token-here

# Database Seeding
SEED_DATA=false

# Logging
LOG_LEVEL=INFO

# Security
CORS_ORIGINS=*

# Redis Configuration
REDIS_URL=redis://redis:6379

# MongoDB Authentication Database
MONGO_AUTH_DB=admin